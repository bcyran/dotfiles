diff:
  pager: delta
merge:
  command: nvim
  args: ["-d", "{{`{{ .Destination }}`}}", "{{`{{ .Source }}`}}", "{{`{{ .Target }}`}}"]

data:
  user:
    email: {{ default "bazyli.cyran@gmail.com" .user.email | quote }}
  machine:
    id: {{ default "home" .machine.id | quote }}
    network:
      wlan: {{ default "" .machine.network.wlan | quote }}
      eth: {{ default "" .machine.network.eth | quote }}
      dock: {{ default "" .machine.network.dock | quote }}
  settings:
    gui: {{ default false .settings.gui }}
    timewall: {{ default false .settings.timewall }}
    autolock:
      enable: {{ hasKey .settings.screenlock "enable" | ternary .settings.screenlock.enable true }}
      time: {{ default 30 .settings.screenlock.time }}
    dirs:
      code: {{ default "~/Kod" .settings.dirs.code | quote }}
      screenshots: {{ default "~/Obrazy/Zrzuty ekranu" .settings.dirs.screenshots | quote }}
      wallpapers: {{ default "~/Obrazy/Tapety" .settings.dirs.wallpapers | quote }}
