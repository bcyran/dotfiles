# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#c4c4c4"
        color_degraded = "#c4c4c4"
        color_bad = "#ff8f00"
        interval = 10
}

order += "spotify"
order += "apt_updates"
order += "redshift"
order += "backlight"
order += "volume_status"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery_level"
order += "tztime local"

apt_updates {
		format = "[\?if=apt  {apt}]"
}

redshift {
		format = " [\?if=enabled {temperature}K|off]"
}

spotify {
		format = " {artist}: {title}"
		format_down = ""
		format_stopped = ""
}

backlight {
		command = "light"
		low_tune_threshold = 20
		cache_timeout = 10
		brightness_delta = 10
		format = " {level}%"
}

volume_status {
		cache_timeout = 10
		format = " {percentage}%"
		max_volume = 100
		format_muted = " {percentage}%"
		color_muted = "#c4c4c4"
		color_bad = "#c4c4c4"
}

wireless _first_ {
		format_up = " %quality %essid"	
		format_down = ""
}
		
ethernet _first_ {
		format_up = " eth"
		format_down = ""
}

battery_level {
        hide_seconds = true
		blocks = ""
		charging_character = ""
        format = "{icon} {percent}%[ {time_remaining}]"
}

tztime local {
        format = " %-d %b, %H:%M  "
}
