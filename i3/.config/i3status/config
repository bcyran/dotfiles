# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	color_good = "#abb2bf"
	color_degraded = "#e5c07b"
	color_bad = "#e06c75"
	interval = 10
}

order += "spotify"
order += "arch_updates"
order += "redshift"
order += "backlight"
order += "volume_status"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery_level"
order += "tztime local"

spotify {
	format = " {artist}: {title}"
	format_down = ""
	format_stopped = ""
	color_paused = "#abb2bf"
}

arch_updates {
	format = " {total}"
	hide_if_zero = True
}

redshift {
	format = " [\?if=enabled {temperature}K|off]"
}

backlight {
	command = "light"
	low_tune_threshold = 20
	cache_timeout = 10
	brightness_delta = 10
	format = " {level}%"
}

volume_status {
	cache_timeout = 10
	format = " {percentage}%"
	max_volume = 100
	format_muted = " {percentage}%"
	color_muted = "#abb2bf"
	color_degraded = "#abb2bf"
	color_bad = "#abb2bf"
}

wireless _first_ {
	format_up = " %quality %essid"
	format_down = ""
}

ethernet _first_ {
	format_up = " eth"
	format_down = ""
}

battery_level {
	hide_seconds = true
	blocks = ""
	charging_character = ""
	color_charging = "#98c379"
	format = "{icon} {percent}%[ {time_remaining}]"
}

tztime local {
	format = " %-d %b, %H:%M  "
}
