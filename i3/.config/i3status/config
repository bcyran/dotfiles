# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#ffffff"
        color_bad = "#ffffff"
        color_degraded = "#ffffff"
        interval = 5
}

order += "spotify"
order += "backlight"
order += "volume_status"
order += "frame network"
order += "battery_level"
order += "tztime local"

spotify {
		format = " {artist}: {title}"
		format_down = ""
		format_stopped = ""
}

backlight {
		command = "light"
		low_tune_threshold = 20
		cache_timeout = 1
		brightness_delta = 10
		format = " {level}%"
}

volume_status {
		cache_timeout = 1
		format = " {percentage}%"
		max_volume = 100
		format_muted = " {percentage}%"
}

frame network {
		format_separator = "   "	
	
		wireless _first_ {
				format_up = " %essid: %quality"	
				format_down = ""
		}
		
		ethernet _first_ {
				format_up = " eth"
				format_down = ""
		}
}

battery_level {
        hide_seconds = true
		blocks = ""
		charging_character = ""
        format = "{icon} {percent}% {time_remaining}"
}

tztime local {
        format = " %-d %b, %H:%M"
}
