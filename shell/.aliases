# Colors and shortcuts for ls and grep
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ll='ls -alhF'
alias la='ls -A'
alias l='ls -CF'

# Enable aliases when using sudo
alias sudo='sudo '

# Alias vim to nvim
alias vim='nvim'

# Clear screen
alias c='clear'

# Clear and return to home
alias cc='cd && c'

# Change directory and list it
function cdl() {
	cd "$@" && ls
}

# Create directory and open it
function mkc() {
	mkdir "$@" && cd "$@"
}

# Alert aliast for long running commands
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# Function for quick switching between websites on the server
function www() {
    if [ -z $1 ]; then
        cd /srv/www
    else 
    	cd /srv/www/$1/public_html
    fi
}

# Extract various archives
function extract(){
	if [ -f $1 ] ; then
		case $1 in
			*.tar.bz2)   tar xvjf $1    ;;
        	*.tar.gz)    tar xvzf $1    ;;
			*.tar.xz)	 tar xvJf $1	;;
            *.bz2)       bunzip2 $1     ;;
            *.rar)       unrar x $1     ;;
            *.gz)        gunzip $1      ;;
            *.tar)       tar xvf $1     ;;
            *.tbz2)      tar xvjf $1    ;;
            *.tgz)       tar xvzf $1    ;;
            *.zip)       unzip $1       ;;
            *.Z)         uncompress $1  ;;
            *.7z)        7z x $1        ;;
        	*)           echo "Unable to extract '$1'" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}
